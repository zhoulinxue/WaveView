<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:WaveView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <org.zhx.waveview.WaveView
        android:id="@+id/waveview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        WaveView:amplitude="36"
        android:layout_centerInParent="true"
        WaveView:backgroundColor="#FAFAFA"
        WaveView:firstWaveColor="#42ADFF"
        WaveView:secondWaveColor="#4d42ADFF"
        WaveView:speed="3"
        WaveView:waterProgress="20"
        WaveView:watertextColor="@color/colorPrimary"
        WaveView:watertextSize="50"
        WaveView:waveSize="200dp"
        WaveView:waterBorderColor="#e5e5e5"
        WaveView:waterBorderWidth="2"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>